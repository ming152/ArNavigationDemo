<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/navigation_root_view"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.arnavigationdemo.ui.activity.NavigationActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:orientation="vertical">
        <com.example.arnavigationdemo.ui.widget.CompassView
            android:id="@+id/compassView"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            app:indicator_color="@android:color/white"
            app:text_size="15dp"
            app:show_degree="45"
            app:scale_width="4dp"
            android:layout_gravity="center_horizontal"/>

        <TextView
            android:id="@+id/navi_instruction"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="15dp"
            android:textColor="@android:color/white"
            android:layout_marginTop="15dp"
            android:layout_gravity="center_horizontal"
            android:maxLines="3"
            android:layout_marginLeft="12dp"
            android:layout_marginRight="12dp"/>
    </LinearLayout>
</FrameLayout>
